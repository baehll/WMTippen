<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seperator_group"
        android:text="@string/debug"
        android:textSize="25sp"
        android:textStyle="bold"
        />
    
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_match_name_text_view"
        android:textSize="18sp"
        android:textStyle="bold"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true">

        <EditText
            android:layout_width="35dp"
            android:layout_height="41.5dp"
            android:id="@+id/list_item_match_tip1_edit_text"
            android:inputType="text"
            android:textSize="20sp"
            android:singleLine="true"
            android:focusable="true"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text=":"
            android:id="@+id/list_item_match_colon_text_view"
            android:layout_toEndOf="@id/list_item_match_tip1_edit_text"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="35dp"
            android:layout_height="41.5dp"
            android:id="@+id/list_item_match_tip2_edit_text"
            android:layout_toEndOf="@id/list_item_match_colon_text_view"
            android:inputType="text"
            android:textSize="20sp"
            android:focusable="true"
            android:textAlignment="center"/>

    </RelativeLayout>

</RelativeLayout>